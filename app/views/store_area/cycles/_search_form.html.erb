  <%# Search Card %>
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-0 py-3">
      <h4 class="card-title mb-0">Filtros</h4>
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: store_area_cycles_path, data: { turbo_frame: "cycles_metrics cycles_list", turbo_action: "advance" } do |f| %>
        <div class="row g-3">
          <%# Customer fields %>
          <div class="col-md-3">
            <div class="form-floating">
              <%= f.search_field :customer_name_cont, class: 'form-control border-0 bg-light', placeholder: ' ' %>
              <label class="text-muted small">Nome do Cliente</label>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-floating">
              <%= f.search_field :customer_email_cont, class: 'form-control border-0 bg-light', placeholder: ' ' %>
              <label class="text-muted small">Email do Cliente</label>
            </div>
          </div>

          <%# Machine fields %>
          <div class="col-md-3">
            <div class="form-floating">
              <%= f.select :machine_type_eq,
                        [['Tipo de Máquina', ''], ['Lavadora', 'Lavadora'], ['Secadora', 'Secadora']],
                        {},
                        class: 'form-select border-0 bg-light' %>
              <label class="text-muted small">Tipo de Máquina</label>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-floating">
              <%= f.select :machine_number_eq,
                        [['Número da Máquina', ''], ['1', '1'], ['2', '2'], ['3', '3']],
                        {},
                        class: 'form-select border-0 bg-light' %>
              <label class="text-muted small">Número da Máquina</label>
            </div>
          </div>

          <%# Status field %>
          <div class="col-md-3">
            <div class="form-floating">
              <%= f.select :status_eq,
                        [['Status', ''], ['Efetivado', 'Efetivado'], ['Estornado', 'Estornado']],
                        {},
                        class: 'form-select border-0 bg-light' %>
              <label class="text-muted small">Status</label>
            </div>
          </div>

          <%# Date range %>
          <div class="col-md-3">
            <div class="form-floating">
              <%= f.date_field :created_at_gteq, class: 'form-control border-0 bg-light', placeholder: ' ' %>
              <label class="text-muted small">Data Inicial</label>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-floating">
              <%= f.date_field :created_at_lteq, class: 'form-control border-0 bg-light', placeholder: ' ' %>
              <label class="text-muted small">Data Final</label>
            </div>
          </div>
        </div>

        <%# Submit and Clear buttons %>
        <div class="row mt-4">
          <div class="col-12 d-flex justify-content-end gap-2">
            <%= link_to 'Limpar', store_area_cycles_path, class: 'btn btn-outline-secondary', data: { turbo_frame: "cycles_metrics cycles_list", turbo_action: "advance" } %>
            <%= f.submit 'Buscar', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>