<div class="row">
  <div class="col-12">
    <div class="d-flex align-items-right mb-3">
      <%= link_to new_store_area_financial_income_statement_cost_path(income_statement.store_id, income_statement), 
        data: { turbo_frame: "modal" },
        class: "btn btn-primary" do %>
      <i class="fas fa-edit"></i> Novo Custo
    <% end %>
    </div>

    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Status</th>
            <th>Valor</th>
            <th>Vencimento</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% income_statement.costs.order(due_date: :asc).each do |cost| %>
            <tr>
              <td><%= cost.due_date %></td>
              <td><%= cost.name %></td>
              <td><%= cost.category %></td>
              <td><%= cost.payment_status %></td>
              <td>R$ <%= number_with_precision(cost.amount, precision: 2) %></td>
              <td>
                <div class="btn-group">
                  <%= link_to store_area_financial_income_statement_cost_path(income_statement.store_id, income_statement, cost), 
                      class: "btn btn-sm btn-outline-info", data: { turbo: true, turbo_frame: "modal" } do %>
                    <i class="cil cil-eye"></i>
                  <% end %>
                  <%= link_to edit_store_area_financial_income_statement_cost_path(income_statement.store_id, income_statement, cost), 
                      class: "btn btn-sm btn-outline-primary",  data: { turbo: true, turbo_frame: "modal" } do %>
                    <i class="cil cil-pencil"></i>
                  <% end %>
                  <%= link_to store_area_financial_income_statement_cost_path(income_statement.store_id, income_statement, cost),
                      method: :delete,
                      data: { confirm: "Tem certeza que deseja excluir este custo?" },
                      class: "btn btn-sm btn-outline-danger" do %>
                    <i class="cil cil-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>