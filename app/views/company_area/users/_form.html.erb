<%= form_with(model: user, url: company_area_user_path(user), local: true) do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= pluralize(user.errors.count, "erro") %> impediu que este usuário fosse salvo:</h6>
      <ul class="mb-0">
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :first_name, "Nome", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :last_name, "Sobrenome", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :email, "E-mail", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :status, "Status", class: "form-label" %>
      <%= f.select :status, User.statuses.keys.map { |status| [status.titleize, status] },
          { include_blank: "Selecione um status" },
          class: "form-select" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :password, "Senha", class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
      <% if user.persisted? %>
        <div class="form-text">Deixe em branco se não quiser alterar a senha.</div>
      <% end %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="mt-4">
    <%= f.submit "Atualizar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", company_area_users_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %> 