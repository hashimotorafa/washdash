<%= form_with(scope: :store, url: store.persisted? ? company_area_store_path(store) : company_area_stores_path, method: store.persisted? ? :put : :post, local: true) do |f| %>
  <% if store.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= pluralize(store.errors.count, "erro") %> impediu que esta loja fosse salva:</h6>
      <ul class="mb-0">
        <% store.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :name, class: 'form-control border-0 bg-light', placeholder: ' ' %>
        <label class="text-muted small">Nome</label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :area_code, class: 'form-control border-0 bg-light', placeholder: ' ' %>
        <label class="text-muted small">Código da Área</label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :external_id, class: 'form-control border-0 bg-light', placeholder: ' ' %>
        <label class="text-muted small">ID Externo</label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-floating">
        <%= f.date_field :started_at, class: 'form-control border-0 bg-light', placeholder: ' ' %>
        <label class="text-muted small">Data de Início</label>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= f.submit store.persisted? ? "Atualizar" : "Salvar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", company_area_stores_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>