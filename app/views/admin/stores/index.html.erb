<%# Main content container %>
<div class="container-fluid">
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-0 py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">Lojas</h4>
        <%= link_to new_admin_store_path, class: 'btn btn-primary' do %>
          <i class="icon cil-plus me-2"></i>Nova Loja
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Empresa</th>
              <th>Código da Área</th>
              <th>ID Externo</th>
              <th>Data de Início</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @stores.each do |store| %>
              <tr>
                <td>
                  <div class="fw-semibold"><%= store.name %></div>
                </td>
                <td>
                  <div class="fw-semibold"><%= store.company.name %></div>
                </td>
                <td>
                  <div class="fw-semibold"><%= store.area_code %></div>
                </td>
                <td>
                  <div class="fw-semibold"><%= store.external_id %></div>
                </td>
                <td>
                  <div class="fw-semibold"><%= l store.started_at.to_date, format: :short %></div>
                  <div class="small text-medium-emphasis"><%= distance_of_time_in_words_to_now(store.started_at) %> atrás</div>
                </td>
                <td>
                  <div class="btn-group">
                    <%= link_to admin_store_path(store),
                        class: 'btn btn-sm btn-outline-primary',
                        data: { bs_toggle: 'tooltip', bs_placement: 'top', title: 'Visualizar detalhes' } do %>
                      <i class="icon cil-magnifying-glass"></i>
                    <% end %>
                    <%= link_to edit_admin_store_path(store),
                        class: 'btn btn-sm btn-outline-primary',
                        data: { bs_toggle: 'tooltip', bs_placement: 'top', title: 'Editar loja' } do %>
                      <i class="icon cil-pencil"></i>
                    <% end %>
                    <%= link_to admin_store_path(store),
                        method: :delete,
                        class: 'btn btn-sm btn-outline-danger',
                        data: { 
                          turbo_method: :delete, 
                          turbo_confirm: 'Tem certeza?',
                          bs_toggle: 'tooltip', 
                          bs_placement: 'top', 
                          title: 'Excluir loja' 
                        } do %>
                      <i class="icon cil-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 