<%# Main content container %>
<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-white border-0 py-3">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="card-title mb-0">Lojas</h4>
      <%= link_to new_admin_store_path, class: 'btn btn-primary' do %>
        <i class="cil-plus me-2"></i>Nova Loja
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Empresa</th>
            <th>Código de Área</th>
            <th>ID Externo</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td>
                <div><%= store.name %></div>
              </td>
              <td>
                <div class="text-muted"><%= store.company&.name || 'N/A' %></div>
              </td>
              <td>
                <div><%= store.area_code %></div>
              </td>
              <td>
                <div><%= store.external_id %></div>
              </td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to admin_store_path(store), class: 'btn btn-sm btn-outline-primary' do %>
                    <i class="cil-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_store_path(store), class: 'btn btn-sm btn-outline-secondary' do %>
                    <i class="cil-pencil"></i>
                  <% end %>
                  <%= button_to admin_store_path(store), method: :delete, 
                      class: 'btn btn-sm btn-outline-danger',
                      data: { confirm: 'Tem certeza que deseja excluir esta loja?' } do %>
                    <i class="cil-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if @stores.empty? %>
  <div class="text-center py-5">
    <i class="cil-home text-muted" style="font-size: 3rem;"></i>
    <h5 class="mt-3 text-muted">Nenhuma loja encontrada</h5>
    <p class="text-muted">Comece criando sua primeira loja.</p>
    <%= link_to new_admin_store_path, class: 'btn btn-primary' do %>
      <i class="cil-plus me-2"></i>Nova Loja
    <% end %>
  </div>
<% end %>
