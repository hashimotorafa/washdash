<%= form_with(model: [:admin, store], local: true) do |f| %>
  <% if store.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(store.errors.count, "erro") %> impediram que esta loja fosse salva:</h5>
      <ul>
        <% store.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :name, 'Nome', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :company_id, 'Empresa', class: 'form-label' %>
      <%= f.collection_select :company_id, @companies, :id, :name, 
          { include_blank: 'Selecione uma empresa' }, 
          class: 'form-select' %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :area_code, 'Código da Área', class: 'form-label' %>
      <%= f.text_field :area_code, class: 'form-control' %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :external_id, 'ID Externo', class: 'form-label' %>
      <%= f.text_field :external_id, class: 'form-control' %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :started_at, 'Data de Início', class: 'form-label' %>
      <%= f.date_field :started_at, class: 'form-control' %>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to 'Voltar', admin_stores_path, class: 'btn btn-light' %>
    <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %> 