<div class="container-lg">
  <div class="card mb-4">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <strong>Detalhes da Empresa</strong>
        <div>
          <%= link_to 'Editar', edit_admin_company_path(@company), class: 'btn btn-primary' %>
          <%= link_to 'Voltar', admin_companies_path, class: 'btn btn-light' %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <h6 class="mb-2">Nome</h6>
          <p class="mb-0"><%= @company.name %></p>
        </div>

        <div class="col-md-6 mb-3">
          <h6 class="mb-2">CNPJ</h6>
          <p class="mb-0"><%= @company.document_number %></p>
        </div>

        <div class="col-md-4 mb-3">
          <h6 class="mb-2">Status</h6>
          <p class="mb-0">
            <% if @company.active? %>
              <span class="badge bg-success">Ativo</span>
            <% else %>
              <span class="badge bg-danger">Inativo</span>
            <% end %>
          </p>
        </div>

        <div class="col-md-8 mb-3">
          <h6 class="mb-2">Cidade</h6>
          <p class="mb-0"><%= @company.city %></p>
        </div>

        <div class="col-md-4 mb-3">
          <h6 class="mb-2">Estado</h6>
          <p class="mb-0"><%= @company.state %></p>
        </div>
      </div>
    </div>
  </div>
</div> 