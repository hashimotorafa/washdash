<%# Main content container %>
<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-white border-0 py-3">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="card-title mb-0">Empresas</h4>
      <%= link_to new_admin_company_path, class: 'btn btn-primary' do %>
        <i class="cil-plus me-2"></i>Nova Empresa
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>Nome</th>
            <th>CNPJ</th>
            <th>Cidade/UF</th>
            <th>Status</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td>
                <div><%= company.name %></div>
              </td>
              <td>
                <div class="text-muted"><%= company.document_number %></div>
              </td>
              <td>
                <div><%= company.city %></div>
                <div class="text-muted small"><%= company.state %></div>
              </td>
              <td>
                <span class="badge bg-success-subtle text-success">Ativo</span>
              </td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to switch_admin_company_path(company), class: 'btn btn-sm btn-outline-primary' do %>
                    <i class="cil-external-link"></i>
                  <% end %>
                  <%= link_to admin_company_path(company), class: 'btn btn-sm btn-outline-secondary' do %>
                    <i class="cil-description"></i>
                  <% end %>
                  <%= link_to edit_admin_company_path(company), class: 'btn btn-sm btn-outline-secondary' do %>
                    <i class="cil-pencil"></i>
                  <% end %>
                  <%= button_to admin_company_path(company), method: :delete, 
                      class: 'btn btn-sm btn-outline-danger',
                      data: { confirm: 'Tem certeza que deseja excluir esta empresa?' } do %>
                    <i class="cil-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if @companies.empty? %>
  <div class="text-center py-5">
    <i class="cil-building text-muted" style="font-size: 3rem;"></i>
    <h5 class="mt-3 text-muted">Nenhuma empresa encontrada</h5>
    <p class="text-muted">Comece criando sua primeira empresa.</p>
    <%= link_to new_admin_company_path, class: 'btn btn-primary' do %>
      <i class="cil-plus me-2"></i>Nova Empresa
    <% end %>
  </div>
<% end %>
