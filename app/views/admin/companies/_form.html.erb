<%= form_with(model: [:admin, company], local: true) do |f| %>
  <% if company.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(company.errors.count, "erro") %> impediram que esta empresa fosse salva:</h5>
      <ul>
        <% company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :name, 'Nome', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :document_number, 'CNPJ', class: 'form-label' %>
      <%= f.text_field :document_number, class: 'form-control', data: { mask: '00.000.000/0000-00' } %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :phone, 'Telefone', class: 'form-label' %>
      <%= f.text_field :phone, class: 'form-control', data: { mask: '(00) 0000-0000' } %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :zip, 'CEP', class: 'form-label' %>
      <%= f.text_field :zip, class: 'form-control', data: { mask: '00000-000' } %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :status, 'Status', class: 'form-label' %>
      <%= f.select :status, Company.statuses.keys.map { |status| [status.titleize, status] }, {}, class: 'form-select' %>
    </div>

    <div class="col-md-8 mb-3">
      <%= f.label :city, 'Cidade', class: 'form-label' %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :state, 'Estado', class: 'form-label' %>
      <%= f.select :state,
          ['AC', 'AL', 'AP', 'AM', 'BA', 'CE', 'DF', 'ES', 'GO', 'MA', 'MT', 'MS', 'MG', 'PA', 'PB', 'PR', 'PE', 'PI', 'RJ', 'RN', 'RS', 'RO', 'RR', 'SC', 'SP', 'SE', 'TO'],
          { include_blank: 'Selecione um estado' },
          class: 'form-select' %>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to 'Voltar', admin_companies_path, class: 'btn btn-light' %>
    <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %>