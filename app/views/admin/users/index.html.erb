<%# Main content container %>
<div class="container-fluid">
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-0 py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">Usuários</h4>
        <%= link_to new_admin_user_path, class: 'btn btn-primary' do %>
          <i class="icon cil-plus me-2"></i>Novo Usuário
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>Nome</th>
              <th>E-mail</th>
              <th>Status</th>
              <th>Tipo</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <div class="fw-semibold"><%= user.name %></div>
                </td>
                <td>
                  <div class="fw-semibold"><%= user.email %></div>
                </td>
                <td>
                  <span class="badge bg-<%= user.active? ? 'success' : 'danger' %>">
                    <%= user.active? ? 'Ativo' : 'Inativo' %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-<%= user.admin? ? 'primary' : 'secondary' %>">
                    <%= user.admin? ? 'Administrador' : 'Usuário' %>
                  </span>
                </td>
                <td>
                  <div class="btn-group">
                    <%= link_to admin_user_path(user),
                        class: 'btn btn-sm btn-outline-primary',
                        data: { bs_toggle: 'tooltip', bs_placement: 'top', title: 'Visualizar detalhes' } do %>
                      <i class="icon cil-magnifying-glass"></i>
                    <% end %>
                    <%= link_to edit_admin_user_path(user),
                        class: 'btn btn-sm btn-outline-primary',
                        data: { bs_toggle: 'tooltip', bs_placement: 'top', title: 'Editar usuário' } do %>
                      <i class="icon cil-pencil"></i>
                    <% end %>
                    <%= link_to admin_user_path(user),
                        method: :delete,
                        class: 'btn btn-sm btn-outline-danger',
                        data: { 
                          turbo_method: :delete, 
                          turbo_confirm: 'Tem certeza?',
                          bs_toggle: 'tooltip', 
                          bs_placement: 'top', 
                          title: 'Excluir usuário' 
                        } do %>
                      <i class="icon cil-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 