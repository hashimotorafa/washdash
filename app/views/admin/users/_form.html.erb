<%= form_with(model: [:admin, user], local: true) do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(user.errors.count, "erro") %> impediram que este usuário fosse salvo:</h5>
      <ul>
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :first_name, 'Nome', class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :last_name, 'Sobrenome', class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="col-md-12 mb-3">
      <%= f.label :email, 'E-mail', class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :password, 'Senha', class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control' %>
      <% if user.persisted? %>
        <div class="form-text">Deixe em branco se não quiser alterar a senha.</div>
      <% end %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :password_confirmation, 'Confirmação de Senha', class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :status, 'Status', class: 'form-label' %>
      <%= f.select :status, User.statuses.keys.map { |status| [status.titleize, status] },
          { include_blank: 'Selecione um status' },
          class: 'form-select' %>
    </div>

    <div class="col-12 mb-3">
      <div class="form-check form-switch">
        <%= f.check_box :admin, class: 'form-check-input' %>
        <%= f.label :admin, 'Administrador', class: 'form-check-label' %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to 'Voltar', admin_users_path, class: 'btn btn-light' %>
    <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %> 