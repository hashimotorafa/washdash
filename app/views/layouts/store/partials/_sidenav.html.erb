    <ul class="sidebar-nav">
      <li class="nav-title">Navegação</li>
      <li class="nav-item">
        <%= link_to company_area_stores_path(company_id: @current_store.company_id), class: "nav-link border-start border-4 border-primary ps-3 bg-primary text-white" do %>
          <i class="nav-icon cil-arrow-left"></i> Área da Empresa
        <% end %>
      </li>
      
      <li class="nav-title">Gestão</li>
      <li class="nav-item">
        <%= link_to store_area_root_path(@current_store.id), class: "nav-link #{'active' if current_page?(admin_home_index_path)}" do %>
