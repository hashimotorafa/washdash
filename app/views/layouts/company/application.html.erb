<!DOCTYPE html>
<html lang="pt-BR">
  <%= render 'layouts/partials/head', title: 'WashDash' %>
  <body>
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
      <div class="sidebar-brand d-flex align-items-center">
        <div class="sidebar-brand-full">WashDash</div>
        <div class="sidebar-brand-narrow">WD</div>
      </div>
      <%= render 'layouts/company/partials/sidenav'%>
    </div>
    
    <div class="wrapper d-flex flex-column min-vh-100">
      <header class="header header-sticky mb-4">
        <div class="container-fluid">
          <button class="header-toggler px-md-0 me-md-3 d-md-none" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
            <i class="cil-menu"></i>
          </button>
          <%= render 'layouts/company/partials/navbar'%>
        </div>
      </header>

      <div class="body flex-grow-1">
        <div class="container-lg">

          <!-- Flash Messages -->
          <% flash.each do |name, msg| %>
            <% if msg.is_a?(String) %>
              <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
                <%= msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>
          <% end %>

          <!-- Main Content -->
          <%= yield %>
        </div>
      </div>

      <footer class="footer">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-between">
            <div class="col-md">
              <div class="text-body-secondary">WashDash &copy; <%= Time.current.year %></div>
            </div>
          </div>
        </div>
      </footer>
    </div>
    <turbo-frame id="modal"></turbo-frame>
    <!-- CoreUI JS -->
    <%= javascript_include_tag "coreui/coreui.bundle.min.js", "data-turbo-track": "reload" %>
    
    <!-- Custom Admin JS -->
    <%= javascript_include_tag "admin", "data-turbo-track": "reload", defer: true %>

    <style>
      .sidebar {
        --cui-sidebar-width: 16rem;
      }
      .sidebar-nav .nav-link {
        display: flex;
        align-items: center;
        padding: 0.8445rem 1rem;
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        white-space: nowrap;
      }
      .sidebar-nav .nav-link:hover {
        color: rgba(255, 255, 255, 0.87);
        background: rgba(255, 255, 255, 0.05);
      }
      .sidebar-nav .nav-link.active {
        color: #fff;
        background: rgba(255, 255, 255, 0.05);
      }
      .nav-group-items {
        padding-left: 0;
      }
      .nav-group-items .nav-link {
        padding-left: 2.5rem;
      }
      .nav-icon {
        margin-right: 0.5rem;
      }
    </style>
  </body>
</html>