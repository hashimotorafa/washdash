# See https://docs.docker.com/engine/reference/builder/#dockerignore-file for more about ignoring files.

# Ignore git directory.
/.git/
/.gitignore
.gitattributes

# Ignore bundler config.
/.bundle

# Ignore all environment files (except templates).
/.env*
!/.env*.erb

# Ignore all default key files.
/config/master.key
/config/credentials/*.key

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
/tmp/pids/*
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases).
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Ignore assets.
/node_modules/
/app/assets/builds/*
!/app/assets/builds/.keep
/public/assets

# Ignore CI service files.
/.github

# Ignore development files
/.devcontainer

# Ignore Docker-related files
/.dockerignore
/Dockerfile*

# Logs
log/*
*.log

# Temporary files
tmp/*
!tmp/.gitkeep

# Database
db/*.sqlite3
db/*.sqlite3-*

# Environment files
.env
.env.*
!.env.example

# Documentation
README.md
CHANGELOG.md
docs/

# IDE files
.vscode/
.idea/
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db

# Node modules (if using yarn/npm)
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Coverage reports
coverage/

# Test files
spec/
test/

# Docker files
docker-compose*

# CI/CD
.gitlab-ci.yml
.travis.yml

# Backup files
*.bak
*.backup

# Cache
.cache/
.parcel-cache/

# Build artifacts
public/assets/
public/packs/
